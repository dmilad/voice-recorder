# Voice Recorder Configuration

# Whisper Model
# Options: tiny.en, base.en, small.en, medium.en, large
# Recommended: base.en (good balance of speed and accuracy)
WHISPER_MODEL=base.en

# Device (cpu or cuda)
WHISPER_DEVICE=cpu

# Hotkey (format: <cmd>+<shift>+<space>)
# Note: Use angle brackets for special keys
HOTKEY=<cmd>+<shift>+<space>

# Audio Settings
SAMPLE_RATE=16000
CHANNELS=1

# Recording Settings
MAX_RECORDING_DURATION=300  # 5 minutes in seconds
MIN_RECORDING_DURATION=0.5  # 0.5 seconds

# Silence Detection
ENABLE_SILENCE_DETECTION=true
ENERGY_THRESHOLD=0.01

# Clipboard Settings
RESTORE_CLIPBOARD=true  # Restore original clipboard after pasting
PASTE_DELAY_MS=100      # Delay before pasting (milliseconds)
